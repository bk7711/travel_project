<section class="containers right-panel-active">
    <!-- Sign Up -->
    <div class="containers__form containers--signup">
        <form action="#" class="form-main signup-form" id="form1">
            <h2 class="form__title">Sign Up</h2>
            <input type="text" placeholder="User" class="input username-signup" />
            <input type="email" placeholder="Email" class="input email-signup" />
            <input type="password" placeholder="Password" class="input password-signup" />
            <button class="btn_login" type="submit">Sign Up</button>
        </form>
    </div>
    <!-- Sign In -->
    <div class="containers__form containers--signin">
        <form action="#" class="form-main login-form" id="form2">
            <h2 class="form__title">Sign In</h2>
            <input type="email" placeholder="Email" class="input email-login" />
            <input type="password" placeholder="Password" class="input password-login" />
            <a href="#" class="link">Forgot your password?</a>
            <button class="btn_login" type="submit">Sign In</button>
        </form>
    </div>
    <!-- Overlay -->
    <div class="containers__overlay">
        <div class="overlay">
            <div class="overlay__panel overlay--left">
                <button class="btn_login" type="submit" id="signIn">Sign In</button>
            </div>
            <div class="overlay__panel overlay--right">
                <button class="btn_login" type="submit" id="signUp">Sign Up</button>
            </div>
        </div>
    </div>
</section>